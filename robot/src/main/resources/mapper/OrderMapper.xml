<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bgy.robot.mapper.OrderMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.bgy.robot.entity.OrderInfo">
        <id column="id" property="id" />
        <result column="order_id" property="orderId" />
        <result column="table_no" property="tableNo" />
        <result column="dish_id" property="dishId" />
        <result column="dish_name" property="dishName" />
        <result column="status" property="status" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, order_id, table_no, dish_id, dish_name, status, create_time
    </sql>

    <select id="findById" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM order_info
        WHERE id = #{id}
    </select>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM order_info
    </select>

    <select id="findByStatus" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM order_info
        WHERE status = #{status}
    </select>

    <update id="updateStatus" parameterType="com.bgy.robot.entity.OrderInfo">
        UPDATE order_info
        SET status = #{status}
        WHERE id = #{id}
    </update>

    <delete id="deleteOrderById" parameterType="java.lang.String">
        DELETE FROM order_info
        WHERE id = #{id}
    </delete>
</mapper>
